<Page
    x:Class="WiFiConnect.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WiFiConnect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="GenerateQR" Content="Generate WiFi QR" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="400" Height="100" Grid.Row="0" Grid.Column="0" Click="GenerateQR_Click" FontSize="36"/>
        <Button x:Name="ScanQR" Content="Scan WiFi QR" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="400" Height="100" Grid.Row="1" Grid.Column="0" Click="ScanQR_Click" FontSize="36"/>
    </Grid>
</Page>
